{
  "manifest_version": 3,
  "name": "Swagger Side Preview",
  "version": "1.0.0",
  "description": "Preview OpenAPI docs in Swagger UI from a side panel. Load via right-click, URL, or paste.",
  "permissions": [
    "sidePanel",
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Open Swagger Side Preview"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
